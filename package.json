{
    "name": "plsql-language",
    "displayName": "Language PL/SQL",
    "description": "PL/SQL language (Oracle) support",
    "version": "1.3.4",
    "publisher": "xyz",
    "engines": {
        "vscode": "^1.24.0"
    },
    "homepage": "https://github.com/zabel-xyz/plsql-language",
    "repository": {
        "type": "git",
        "url": "https://github.com/zabel-xyz/plsql-language.git"
    },
    "bugs": {
        "url": "https://github.com/zabel-xyz/plsql-language/issues"
    },
    "icon": "images/plsql-language.png",
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "plsql",
        "oracle",
        "multi-root ready"
    ],
    "activationEvents": [
        "onLanguage:plsql"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [{
            "id": "plsql",
            "aliases": [
                "PLSQL",
                "PL/SQL",
                "plsql"
            ],
            "extensions": [
                ".sql",
                ".ddl",
                ".dml",
                ".pkh",
                ".pkb",
                ".pks",
                ".pck",
                ".pls"
            ],
            "configuration": "./syntaxes/plsql.configuration.json"
        }],
        "grammars": [{
            "language": "plsql",
            "scopeName": "source.plsql.oracle",
            "path": "./syntaxes/plsql.tmLanguage"
        }],
        "configuration": {
            "type": "object",
            "title": "PL/SQL configuration",
            "properties": {
                "plsql-language.searchFolder": {
                    "type": "string",
                    "default": null,
                    "description": "A folder to search plsql files (default is to search in workspace folder)"
                },
                "plsql-language.synonym": {
                    "type": "object",
                    "default": {"replace": null, "by": null},
                    "description": "Usage of synonmy for package name. To replace synonym by real package name when navigate. ('replace' could be a regular expression)"
                },

                "plsql-language.commentInSymbols": {
                    "type": "boolean",
                    "default": false,
                    "description": "Use comments between symbol and name (e.g. create or replace package /** **/ name)"
                },

                "plsql-language.snippets.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable snippets"
                },

                "plsql-language.completion.path": {
                    "type": "string",
                    "default": null,
                    "description": "Specify the folder location where to find plsql.completion.json (null: no custom completion)"
                },

                "plsql-language.pldoc.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable a special snippet for automatic documentation of procedures and functions"
                },
                "plsql-language.pldoc.path": {
                    "type": "string",
                    "default": null,
                    "description": "Specify the folder location where to find pldoc.json (null: use the default file)"
                },
                "plsql-language.pldoc.author": {
                    "type": "string",
                    "default": "",
                    "description": "Define string to replace variable ${PLDOC_AUTHOR}"
                },

                "plsql-language.connections": {
                    "type": "array",
                    "title": "Connections",
                    "default": [],
                    "items": {
                        "type": "object",
                        "properties": {
                            "active": {
                                "type": "boolean",
                                "required": false,
                                "description": "Define the active connection"
                            },
                            "name": {
                                "type": "string",
                                "required": false,
                                "description": "Name of the connection (default is user@database)"
                            },
                            "database": {
                                "type": "string",
                                "required": true,
                                "description": "Database name"
                            },
                            "username": {
                                "type": "string",
                                "required": true,
                                "description": "User name"
                            },
                            "password": {
                                "type": [
                                    "string",
                                    "null"
                                ],
                                "description": "User password",
                                "required": false
                            },
                            "schema": {
                                "type": [
                                    "string",
                                    "null"
                                ],
                                "description": "Schema name",
                                "required": false
                            }
                        }
                    }
                },
                "plsql-language.connection.activeInfos": {
                    "type": "string",
                    "default": "",
                    "description": "Connection infos to be used in a task"
                },
                "plsql-language.connection.patternActiveInfos": {
                    "type": "string",
                    "default": "${username}/${password}@${database}",
                    "description": "Pattern of connection infos to be used in a task"
                }
            }
        },

        "viewsContainers": {
            "activitybar": [{
                "id": "PLSQLLanguage",
                "icon": "resources/images/dark/database.png",
                "title": "plsql-language"
            }]
        },

        "views": {
            "PLSQLLanguage": [{
                "id": "treePLSQLLanguage",
                "name": "PLSQL - Connections"
            }]
        },

	    "commands": [{
            "command": "treePLSQLLanguage.refresh",
            "title": "Refresh",
            "icon": {
                "light": "resources/images/light/refresh.png",
                "dark": "resources/images/dark/refresh.png"
            }
        },{
            "command": "treePLSQLLanguage.settings",
            "title": "Settings",
            "icon": {
                "light": "resources/images/light/settings.png",
                "dark": "resources/images/dark/settings.png"
            }
        },{
            "command": "treePLSQLLanguage.new",
            "title": "New",
            "icon": {
                "light": "resources/images/light/new.png",
                "dark": "resources/images/dark/new.png"
            }
        },{
            "command": "treePLSQLLanguage.activateEntry",
            "title": "Activate"
        }],

        "menus": {
            "view/title": [{
                "command": "treePLSQLLanguage.refresh",
                "when": "view == treePLSQLLanguage",
                "group": "navigation@1"
            }, {
                "command": "treePLSQLLanguage.new",
                "when": "view == treePLSQLLanguage",
                "group": "navigation@2"
            },{
                "command": "treePLSQLLanguage.settings",
                "when": "view == treePLSQLLanguage",
                "group": "navigation@3"
            }],

            "view/item/context": [{
                "command": "treePLSQLLanguage.activateEntry",
                "when": "view == treePLSQLLanguage && viewItem == plsqlLanguageConnection",
                "group": "1_tree-navigation@1"
            }]
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "glob": "7.1.2",
        "json5": "1.0.1",
        "dateformat": "3.0.3"
    },
    "devDependencies": {
        "typescript": "2.9.1",
        "vscode": "1.1.18",
        "mocha": "5.2.0",
        "@types/node": "10.3.2",
        "@types/mocha": "5.2.1"
    }
}
